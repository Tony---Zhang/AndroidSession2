<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTextView">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BaseTextView.Medium">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="BaseTextView.Medium.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseTextView.Small">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="BaseTextView.Small.DarkBlue">
        <item name="android:textColor">@color/dk_blue</item>
    </style>

    <style name="TweetIcon">
        <item name="android:background">@color/lt_grey</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="TweetContent" parent="BaseTextView.Small">
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">6</item>
        <item name="android:textColor">@color/dk_black</item>
    </style>

</resources>
